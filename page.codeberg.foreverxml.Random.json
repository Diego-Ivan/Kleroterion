{
    "app-id" : "page.codeberg.foreverxml.Random",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "40",
    "sdk" : "org.gnome.Sdk",
    "command" : "randomgtk",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name": "libsass",
            "sources": [
                {
                    "type" : "archive",
                    "url" : "https://github.com/sass/libsass/archive/3.6.4.tar.gz",
                    "sha256": "f9484d9a6df60576e791566eab2f757a97fd414fce01dd41fc0a693ea5db2889"
                },
                {
                    "type" : "script",
                    "dest-filename" : "autogen.sh",
                    "commands" : [ "autoreconf -si" ]
                }
            ]
        },
        {
            "name": "sassc",
            "sources": [
                {
                    "type" : "archive",
                    "url" : "https://github.com/sass/sassc/archive/3.6.1.tar.gz",
                    "sha256": "8cee391c49a102b4464f86fc40c4ceac3a2ada52a89c4c933d8348e3e4542a60"
                },
                {
                    "type" : "script",
                    "dest-filename" : "autogen.sh",
                    "commands" : [ "autoreconf -si" ]
                }
            ]
        },
        {
            "name" : "libadwaita",
            "buildsystem": "meson",
            "config-opts" : [
                "-Dexamples=false",
                "-Dtests=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libadwaita.git",
                    "branch" : "main",
                    "commit" : "65ac5258cdcd1c1bfdf2d8f29c9518e16bcca445"
                }
            ]
        },
        {
            "name" : "random",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://codeberg.org/foreverxml/random.git",
                    "tag": "v0.7"
                }
            ]
        }
    ]
}
